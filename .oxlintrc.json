{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "categories": {
    "correctness": "error",
    "nursery": "error",
    "pedantic": "error",
    "perf": "error",
    "restriction": "error",
    "style": "error",
    "suspicious": "error"
  },
  "env": {
    "node": true
  },
  "ignorePatterns": [
    ".next",
    "out",
    "dist",
    "build",
    "coverage",
    "reports",
    "**/*.tsbuildinfo",
    "src/generated",
    "src/.prebuilt-deploy",
    "src/lib/db/generated",
    "src/lib/db/kysely-types.ts",
    "public/vendor",
    "scripts",
    "scripts/**",
    "node_modules",
    "oxlint-plugins",
    "oxlint-plugins/**",
    "pnpm-lock.yaml",
    "yarn.lock",
    "package-lock.json",
    ".pnp.*",
    ".turbo",
    ".env*",
    ".DS_Store",
    "**/kysely-types.ts",
    "**/generated/schema-version.ts",
    "src/lib/db/generated.ts"
  ],
  "jsPlugins": [
    {
      "name": "driah-server-actions",
      "specifier": "./oxlint-plugins/driah-server-actions.cjs"
    },
    {
      "name": "driah-react-transitions",
      "specifier": "./oxlint-plugins/driah-react-transitions.cjs"
    },
    {
      "name": "react-hooks-js",
      "specifier": "eslint-plugin-react-hooks"
    }
  ],
  "overrides": [
    {
      "env": {
        "browser": true,
        "node": true
      },
      "files": ["src/**/*.{js,jsx,ts,tsx}"]
    },
    {
      "env": {
        "browser": true,
        "node": true
      },
      "files": ["packages/playwright-web/**/*.{js,jsx,mjs,ts,tsx}"]
    },
    {
      "files": ["apps/*/src/**/*.{js,jsx,ts,tsx}", "packages/*/src/**/*.{js,jsx,ts,tsx}", "src/**/*.{js,jsx,ts,tsx}"],
      "rules": {
        "import/unambiguous": "error"
      }
    },
    {
      "files": [
        "**/src/env.ts",
        "**/src/env-*.ts",
        "**/src/env-*.tsx",
        "**/src/env-*.js",
        "**/src/env-*.jsx",
        "**/src/env-*.mjs",
        "**/src/env-*.cjs",
        "apps/*/src/instrumentation.ts",
        "apps/*/proxy.ts"
      ],
      "rules": {
        "node/no-process-env": "off"
      }
    },
    {
      "files": ["**/*.d.ts", "src/**/*.{js,jsx,ts,tsx}"],
      "rules": {
        "import/unambiguous": "off",
        "unicorn/no-empty-file": "off"
      }
    },
    {
      "files": ["**/*.cjs", ".ncurc.js"],
      "rules": {
        "import/no-commonjs": "off",
        "import/no-dynamic-require": "off",
        "node/global-require": "off",
        "typescript/no-require-imports": "off"
      }
    },
    {
      "files": ["**/*.{js,jsx,mjs,cjs}"],
      "rules": {
        "jsdoc/require-param-type": "error",
        "jsdoc/require-returns-type": "error"
      }
    },
    {
      "files": ["packages/playwright-web/tests/**/*.{js,jsx,mjs,ts,tsx}"],
      "rules": {
        "vitest/consistent-test-filename": "off"
      }
    },
    {
      "files": ["src/app/**/page.{tsx,jsx}", "src/app/**/layout.{tsx,jsx}"],
      "rules": {
        "react/only-export-components": [
          "error",
          {
            "allowExportNames": [
              "metadata",
              "generateMetadata",
              "viewport",
              "generateViewport",
              "generateStaticParams"
            ],
            "checkJS": false,
            "allowConstantExport": false,
            "customHOCs": []
          }
        ]
      }
    },
    {
      "files": [
        "src/app/**/page.{js,jsx,ts,tsx}",
        "src/app/**/layout.{js,jsx,ts,tsx}",
        "src/app/**/loading.{js,jsx,ts,tsx}",
        "src/app/**/template.{js,jsx,ts,tsx}",
        "src/app/**/error.{js,jsx,ts,tsx}",
        "src/app/**/global-error.{js,jsx,ts,tsx}",
        "src/app/**/not-found.{js,jsx,ts,tsx}",
        "src/app/**/forbidden.{js,jsx,ts,tsx}",
        "src/app/**/unauthorized.{js,jsx,ts,tsx}",
        "src/app/**/default.{js,jsx,ts,tsx}",
        "src/lib/imageLoader.ts"
      ],
      "rules": {
        "import/no-default-export": "off"
      }
    },
    {
      "files": [
        "scripts/**",
        "packages/**/scripts/**",
        "**/*.config.*",
        "next.config.*",
        "postcss.config.*",
        "tailwind.config.*",
        "**/.mjmlconfig.*",
        "vitest/**"
      ],
      "rules": {
        "no-console": "off",
        "node/no-process-env": "off",
        "import/no-default-export": "off"
      }
    },
    {
      "files": [
        "apps/jobs/src/index.ts",
        "apps/jobs/src/smoke.ts",
        "scripts/**",
        "packages/**/scripts/**",
        "vitest/**",
        "packages/playwright-web/**/*.mjs"
      ],
      "rules": {
        "unicorn/no-process-exit": "off"
      }
    },
    {
      "files": [
        "**/__tests__/**",
        "**/*.{test,spec}.{js,jsx,ts,tsx}",
        "**/test/**",
        "**/tests/**",
        "vitest/**",
        "playwright/**",
        "cypress/**",
        "packages/playwright-web/**"
      ],
      "rules": {
        "no-console": "off",
        "node/no-process-env": "off"
      }
    },
    {
      "files": ["**/generated/**", "**/*.gen.*"],
      "rules": {
        "no-console": "off"
      }
    }
  ],
  "plugins": [
    "eslint",
    "react",
    "unicorn",
    "typescript",
    "oxc",
    "import",
    "jsdoc",
    "vitest",
    "jsx-a11y",
    "nextjs",
    "react-perf",
    "promise",
    "node"
  ],
  "rules": {
    "arrow-body-style": "off",
    "capitalized-comments": "off",
    "class-methods-use-this": "off",
    "complexity": "off",
    "curly": "error",
    "default-case": "off",
    "driah-react-transitions/no-setters-after-await": "off",
    "driah-react-transitions/no-setters-in-schedulers": "error",
    "driah-server-actions/react-compiler-check": "off",
    "eqeqeq": [
      "error",
      "always",
      {
        "null": "ignore"
      }
    ],
    "func-style": "off",
    "id-length": "off",
    "import/consistent-type-specifier-style": "off",
    "import/exports-last": "off",
    "import/group-exports": "off",
    "import/max-dependencies": "off",
    "import/no-default-export": "off",
    "import/no-duplicates": "off",
    "import/no-nodejs-modules": "off",
    "import/no-named-as-default": "off",
    "import/no-named-as-default-member": "off",
    "import/no-named-export": "off",
    "import/no-namespace": "off",
    "import/no-relative-parent-imports": "off",
    "import/no-unassigned-import": "off",
    "import/prefer-default-export": "off",
    "import/unambiguous": "off",
    "init-declarations": "off",
    "no-restricted-imports": "off",
    "jest/consistent-test-it": "off",
    "jest/max-expects": "off",
    "jest/no-conditional-in-test": "off",
    "jest/no-hooks": "off",
    "jest/no-untyped-mock-factory": "off",
    "jest/prefer-called-with": "off",
    "jest/require-hook": "off",
    "jest/require-top-level-describe": "off",
    "jest/valid-title": [
      "error",
      {
        "ignoreTypeOfDescribeName": true
      }
    ],
    "jsdoc/require-param": "off",
    "jsdoc/require-param-type": "off",
    "jsdoc/require-returns": "off",
    "jsdoc/require-returns-type": "off",
    "max-classes-per-file": "off",
    "max-depth": "off",
    "max-lines": [
      "error",
      {
        "max": 1200,
        "skipBlankLines": true,
        "skipComments": true
      }
    ],
    "max-lines-per-function": "off",
    "max-params": "off",
    "max-statements": "off",
    "no-alert": "off",
    "no-async-await": "off",
    "no-await-in-loop": "off",
    "no-bitwise": "off",
    "no-console": "off",
    "no-continue": "off",
    "no-duplicate-imports": [
      "error",
      {
        "allowSeparateTypeImports": true
      }
    ],
    "no-else-return": "off",
    "no-empty-function": [
      "error",
      {
        "allow": ["privateConstructors", "protectedConstructors"]
      }
    ],
    "no-eq-null": "off",
    "no-implicit-coercion": [
      "error",
      {
        "boolean": true,
        "number": false,
        "string": true,
        "disallowTemplateShorthand": false,
        "allow": ["!!"]
      }
    ],
    "no-inline-comments": "off",
    "no-loop-func": "off",
    "no-magic-numbers": "off",
    "no-negated-condition": "off",
    "no-nested-ternary": "off",
    "no-optional-chaining": "off",
    "no-param-reassign": "off",
    "no-plusplus": "off",
    "no-rest-spread-properties": "off",
    "no-ternary": "off",
    "no-undefined": "off",
    "no-useless-return": "off",
    "no-void": "off",
    "no-warning-comments": "off",
    "node/no-process-env": "off",
    "oxc/branches-sharing-code": "off",
    "oxc/no-map-spread": "off",
    "prefer-destructuring": "off",
    "prefer-template": "off",
    "promise/always-return": "off",
    "promise/avoid-new": "off",
    "promise/prefer-await-to-callbacks": "off",
    "promise/prefer-await-to-then": "off",
    "promise/valid-params": "off",
    "react/display-name": "off",
    "react/jsx-filename-extension": [
      "error",
      {
        "extensions": [".jsx", ".tsx"]
      }
    ],
    "react/jsx-max-depth": "off",
    "react/jsx-props-no-spreading": "off",
    "react/no-multi-comp": "off",
    "react/no-danger": "off",
    "react/no-unescaped-entities": "off",
    "react/only-export-components": "off",
    "react/react-in-jsx-scope": "off",
    "react-hooks-js/automatic-effect-dependencies": "error",
    "react-hooks-js/component-hook-factories": "error",
    "react-hooks-js/config": "error",
    "react-hooks-js/error-boundaries": "error",
    "react-hooks-js/exhaustive-effect-dependencies": "error",
    "react-hooks-js/fbt": "error",
    "react-hooks-js/fire": "error",
    "react-hooks-js/gating": "error",
    "react-hooks-js/globals": "error",
    "react-hooks-js/immutability": "error",
    "react-hooks-js/incompatible-library": "error",
    "react-hooks-js/invariant": "error",
    "react-hooks-js/memo-dependencies": "error",
    "react-hooks-js/memoized-effect-dependencies": "error",
    "react-hooks-js/no-deriving-state-in-effects": "error",
    "react-hooks-js/preserve-manual-memoization": "error",
    "react-hooks-js/purity": "error",
    "react-hooks-js/refs": "error",
    "react-hooks-js/rule-suppression": "error",
    "react-hooks-js/set-state-in-effect": "error",
    "react-hooks-js/set-state-in-render": "error",
    "react-hooks-js/static-components": "error",
    "react-hooks-js/syntax": "error",
    "react-hooks-js/todo": "off",
    "react-hooks-js/unsupported-syntax": "error",
    "react-hooks-js/use-memo": "error",
    "react-hooks-js/void-use-memo": "error",
    "react-perf/jsx-no-jsx-as-prop": "off",
    "react-perf/jsx-no-new-array-as-prop": "off",
    "react-perf/jsx-no-new-function-as-prop": "off",
    "react-perf/jsx-no-new-object-as-prop": "off",
    "require-await": "off",
    "sort-imports": "off",
    "sort-keys": "off",
    "typescript/consistent-type-definitions": "off",
    "typescript/explicit-function-return-type": "off",
    "typescript/explicit-module-boundary-types": "off",
    "typescript/no-confusing-void-expression": [
      "error",
      {
        "ignoreArrowShorthand": true,
        "ignoreVoidOperator": false,
        "ignoreVoidReturningFunctions": false
      }
    ],
    "typescript/no-deprecated": "off",
    "typescript/no-empty-interface": [
      "error",
      {
        "allowSingleExtends": true
      }
    ],
    "typescript/no-empty-object-type": [
      "error",
      {
        "allowInterfaces": "with-single-extends"
      }
    ],
    "typescript/no-unsafe-argument": "off",
    "typescript/no-unsafe-assignment": "off",
    "typescript/no-unsafe-call": "off",
    "typescript/no-unsafe-member-access": "off",
    "typescript/no-unsafe-return": "off",
    "typescript/no-unsafe-type-assertion": "off",
    "typescript/prefer-optional-chain": "off",
    "typescript/promise-function-async": "off",
    "typescript/require-await": "off",
    "typescript/return-await": "off",
    "typescript/strict-boolean-expressions": "off",
    "typescript/switch-exhaustiveness-check": "off",
    "unicorn/catch-error-name": "off",
    "unicorn/consistent-function-scoping": "off",
    "unicorn/explicit-length-check": "off",
    "unicorn/filename-case": "off",
    "unicorn/no-array-callback-reference": "off",
    "unicorn/no-array-for-each": "off",
    "unicorn/no-array-method-this-argument": "off",
    "unicorn/no-array-reduce": "off",
    "unicorn/no-await-expression-member": "off",
    "unicorn/no-empty-file": "error",
    "unicorn/no-immediate-mutation": "off",
    "unicorn/no-lonely-if": "off",
    "unicorn/no-nested-ternary": "off",
    "unicorn/no-null": "off",
    "unicorn/no-typeof-undefined": "off",
    "unicorn/no-useless-switch-case": "off",
    "unicorn/no-useless-undefined": "off",
    "unicorn/no-zero-fractions": "off",
    "unicorn/number-literal-case": "off",
    "unicorn/numeric-separators-style": [
      "error",
      {
        "onlyIfContainsSeparator": true,
        "number": {
          "groupLength": 3,
          "minimumDigits": 0
        },
        "hexadecimal": {
          "groupLength": 2,
          "minimumDigits": 0
        },
        "binary": {
          "groupLength": 4,
          "minimumDigits": 0
        },
        "octal": {
          "groupLength": 4,
          "minimumDigits": 0
        }
      }
    ],
    "unicorn/prefer-add-event-listener": "off",
    "unicorn/prefer-at": "off",
    "unicorn/prefer-code-point": "off",
    "unicorn/prefer-dom-node-append": "off",
    "unicorn/prefer-dom-node-dataset": "off",
    "unicorn/prefer-dom-node-remove": "off",
    "unicorn/prefer-global-this": "off",
    "unicorn/prefer-logical-operator-over-ternary": "off",
    "unicorn/prefer-native-coercion-functions": "off",
    "unicorn/prefer-number-properties": "off",
    "unicorn/prefer-query-selector": "off",
    "unicorn/prefer-response-static-json": "error",
    "unicorn/prefer-spread": "off",
    "unicorn/prefer-string-raw": "off",
    "unicorn/prefer-string-replace-all": "off",
    "unicorn/prefer-string-slice": "off",
    "unicorn/prefer-top-level-await": "off",
    "unicorn/no-process-exit": "error",
    "unicorn/require-module-specifiers": "off",
    "unicorn/require-post-message-target-origin": "off",
    "unicorn/switch-case-braces": "off",
    "vitest/prefer-called-once": "off",
    "vitest/prefer-describe-function-title": "error",
    "vitest/prefer-to-be-truthy": "off",
    "vitest/prefer-to-be-falsy": "off",
    "prefer-const": "off",
    "no-unused-vars": "off",
    "typescript/no-non-null-assertion": "off",
    "react/no-array-index-key": "off",
    "unicorn/prefer-structured-clone": "off",
    "unicorn/prefer-type-error": "off",
    "new-cap": "off",
    "no-undef": "off",
    "react/button-has-type": "off",
    "typescript/no-explicit-any": "off",
    "typescript/prefer-nullish-coalescing": "off",
    "typescript/use-unknown-in-catch-callback-variable": "off",
    "promise/catch-or-return": "off",
    "typescript/array-type": "off",
    "unicorn/no-unreadable-array-destructuring": "off",
    "react/jsx-no-useless-fragment": "off",
    "oxc/no-barrel-file": "off",
    "typescript/no-misused-promises": "off"
  },
  "settings": {
    "next": {
      "rootDir": ["."]
    },
    "react": {
      "version": "19.2.4"
    }
  }
}
