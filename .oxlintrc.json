{
  "$schema": "https://oxc.rs/schema/oxlintrc.json",
  "ignorePatterns": [
    "**/node_modules/**",
    "**/.next/**",
    "**/.turbo/**",
    "**/dist/**",
    "**/build/**",
    "**/.output/**",
    "src/lib/db/generated.ts"
  ],
  "plugins": ["eslint", "typescript", "react", "nextjs", "jsx-a11y"],
  "jsPlugins": ["eslint-plugin-better-tailwindcss", "eslint-plugin-react-compiler"],
  "rules": {
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn",
    "react-compiler/react-compiler": "error",
    "better-tailwindcss/sort-classes": [
      "warn",
      {
        "entryPoint": "src/app/globals.css"
      }
    ]
  }
}
