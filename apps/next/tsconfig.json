{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "moduleSuffixes": [
      ".web",
      ""
    ],
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/components/*": ["./components/*"],
      "@/lib/*": ["./lib/*"],
      "@/server/*": ["./server/*"],
      "app/*": [
        "../../packages/app/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "app-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.d.ts",
    "next.config.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
